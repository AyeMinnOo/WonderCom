<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.wondercom.MainActivity"
    android:background="@color/app_background" >
    
    <TextView 
        android:id="@+id/setChatNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/setChatName"
        android:text="@string/set_chat_name"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:textSize="18sp"
        android:textColor="@color/app_text" />
    
    <EditText 
        android:id="@id/setChatName"
        android:inputType="textCapWords"
        android:lines="1"
        android:maxLength="20"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:background="@drawable/edit_text"
        android:layout_marginTop="15dp" />

    <Button 
        android:id="@+id/goToSettings"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:text="@string/go_to_settings_button"
        android:background="@drawable/button"
        android:textColor="@color/button_text" />
        
    <Button         
        android:id="@+id/goToChat"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button"
        android:textColor="@color/button_text"
        android:layout_margin="20dp" />

</RelativeLayout>